@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@using ProductReview.Models
@model User





<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login & Registration Form</title>
    <!---Custom CSS File--->
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="container">
        <div class="login form">
            <header>Login</header>
            <form asp-controller="Login" asp-action="Login" method="post">
            
                <input type="text" class="form-control" required id="username" placeholder="Enter your email" value="" name="name">
                <span style="color: red; margin-bottom: 10px" asp-validation-for="Email"></span><br />
                <input type="password" class="form-control" required id="password" value="" name="pass" placeholder="Enter your password">
                <span style="color: red; margin-bottom: 10px" asp-validation-for="Password"></span><br />
                @if (ViewBag.error != null)
                {
                    <span style="color: red; margin-bottom: 10px">@ViewBag.error </span> <br />
                }
                <a href="#">Forgot password?</a>
                <input type="submit" class="button" value="Login">
            </form>
            @{


                var errLogin = Context.Session.GetString("errLogin");

            }
            <div style="color:red">@errLogin</div>
            <div class="signup">
                <span class="signup">
                    Don't have an account?
                    <label onclick="register()" for="check">Signup</label>
                </span>
            </div>
        </div>
    </div>
    <script>
        function register() {
            window.location = "/Login/Register";
        }
    </script>
</body>
</html>